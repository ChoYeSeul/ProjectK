// CSS Overrided by JSPH

// Typography Setting
$spacing: 0.12em;
$font-sans: soleil, sans-serif;
$font-sans-logo: bicyclette, sans-serif;
$font-serif: adobe-garamond-pro, serif;

// Color Setting
$color-theme-default: #141414;
$color-blancsom-base: #416362; // previous: #416341
$color-background-lite: lighten($color-blancsom-base, 65); // previous: #f6f8f6
$color-background-dark: darken($color-blancsom-base, 15); // previous: #233523
$color-background-lite-darken: desaturate(darken($color-background-lite, 9), 6);
$color-theme3-default: desaturate(
  lighten($color-blancsom-base, 25),
  13
); // previous: #858585
$color-sale: $color-theme-default;

// Meida Query Breakpoint
$screen-xs-down: 0;
$screen-sm-down: 540px;
$screen-md-down: 777px;
$screen-lg-down: 1024px;
$screen-xl-down: 1259px;
$screen-xs-up: 0;
$screen-sm-up: 541px;
$screen-md-up: 778px;
$screen-lg-up: 1025px;
$screen-xl-up: 1260px;

// Logo size Setting
$mobile-logo-width-half: "{{settings.logo_mobile_width | divided_by: 2}}px";

.blancsom-theme {
  // General
  p,
  .paragraph {
    color: $color-theme3-default;
  }
  .search-form {
    background-color: $color-background-lite;
  }

  @media (min-width: $screen-lg-up) {
    .container-fluid {
      padding-right: 30px;
      padding-left: 30px;
    }
    // Product Page Layout
    .col-12.col-lg-6 {
      &.blancsom-image-side {
        padding-right: 100px;
      }
      &.blancsom-info-side {
        padding-top: 64px;
        padding-right: 160px;
        .js-sticky-sidebar {
          .product-page__tabs {
            .tabs__body {
              margin-bottom: 96px;
            }
          }
        }
      }
    }
  }
  // GNB
  .menu__level-01 {
    .menu__back {
      a {
        &::after {
          content: "View All";
          font-size: 0.6em;
          margin-left: 0.6em;
          text-decoration: underline;
          display: inline-block;
          transform: translateY(-0.2em);
          color: rgba($color-theme-default, 0.6);
        }
      }
    }
  }

  // Breadcrumbs
  .breadcrumbs {
    margin-bottom: 1rem;
    ul {
      li {
        text-transform: uppercase;
        letter-spacing: $spacing;
        font-size: 0.7rem;
      }
    }
  }

  .label--sale {
    background-color: $color-sale;
  }

  // Product Page Styling
  .product-page-info {
    .product-page-info__title {
      h1 {
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: $spacing;
        line-height: 1.3;
      }
    }
    .product-page-info__price {
      .price {
        font-size: 1.1rem;
        letter-spacing: $spacing;
        display: inline-flex;
        flex-flow: row-reverse;
        &.price--sale {
          & > span:not(:first-child) {
            margin-right: 0.2em;
            &::before {
              display: inline-block;
              content: "";
            }
          }
          & > span:first-child {
            font-size: 0.75em;
            margin-top: -0.1em;
          }
        }
      }
    }
    .product-page-info__price-sale-details {
      color: $color-sale;
    }
    .product-page-info__details {
      .product-page-info__vendor {
        text-transform: uppercase;
        letter-spacing: $spacing;
      }
    }
    .btn-link {
      text-decoration: none;
    }
  }
  .product-page__tabs {
    .tabs__content,
    p {
      font-family: $font-serif;
      font-weight: 400;
      font-style: normal;
      color: #000000;
      &.description img {
        display: none; // Hide images in descirption
      }
    }
    #ProductTabDescription {
      #ProductSizeChart {
        display: none;
      }
    }
    .table-product-sizes {
      td:first-child {
        white-space: nowrap;
      }
    }
    #ProductTab2 {
      ul {
        list-style: none;
        li {
          margin-bottom: 0.5em;
          line-height: 1.2;
        }
      }
    }
    .shipping-info {
      $info-color: $color-blancsom-base;
      padding: 0.5rem;
      margin-bottom: 1rem;
      background: $color-background-lite;
      h6 {
        display: flex;
        font-size: 0.75rem;
        color: $info-color;
        margin-bottom: 4px;
      }
      svg {
        min-height: unset;
        height: 1.2em;
        fill: $info-color;
      }
      p {
        font-family: $font-sans;
        padding-left: 0.3rem;
        padding-right: 0.3rem;
        font-size: 0.7rem;
        color: $info-color;
        font-weight: 300;
        line-height: 1.3;
        margin: 0;
      }
    }
  }

  // Collection List Styling
  .label {
    line-height: unset;
    font-family: $font-sans-logo;
    height: unset;
    padding: 2px 6px 1px;
    // font-weight: bold;
    &.label--out-stock {
      $color-out-stock: $color-sale;
      color: $color-out-stock;
      background: none;
      border: 1px solid rgba($color-out-stock, 0.5);
      padding-top: 1px;
    }
  }
  .product-collection__more-info {
    &,
    a {
      color: $color-theme-default !important;
      text-transform: uppercase;
    }
  }
  .product-collection__price {
    .price {
      font-size: 1rem;
      display: inline-flex;
      flex-flow: row-reverse;
      &.price--sale {
        & > span:not(:first-child) {
          margin-right: 0.2em;
          &::before {
            display: inline-block;
            content: "";
          }
        }
        & > span:first-child {
          font-size: 0.75em;
        }
      }
    }
  }
  .product-collection__title {
    h4 {
      line-height: 1.2;
      text-transform: uppercase;
    }
  }
  .collection-control__information {
    font-family: $font-serif;
    font-size: 1.1em;
  }

  .blancsom-collection-list-options {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
    .product-options__section {
      font-family: $font-serif;
      color: #000000;
      &:not(:last-child) {
        &::after {
          margin-left: 0.1em;
          margin-right: 0.3rem;
          content: ",";
        }
      }
      .blancsom-option:not(:last-child) {
        &::after {
          content: "/";
          margin-left: 0.2em;
          margin-right: 0.2em;
        }
      }
      .blancsom-option.disabled {
        display: none;
      }
    }
  }

  .collection-products {
    @media (min-width: 1920px) {
      .blancsom-xxl-col {
        flex: 0 0 16.6666%;
        max-width: 16.6666%;
      }
    }
  }

  .blancsom-search {
    @media (min-width: 1920px) {
      .blancsom-xxl-col {
        flex: 0 0 16.6666%;
        max-width: 16.6666%;
      }
    }
  }

  .pagination {
    .no-product {
      background: none;
      border: none;
      span {
        font-family: $font-serif;
        color: $color-theme-default;
      }
    }
    .pagination__page {
      &.current {
        color: $color-theme-default;
        border-bottom: 1px solid $color-theme-default;
      }
      border-bottom: 1px solid rgba(0, 0, 0, 0);
    }
    a.text-underline-hover {
      padding-left: 4px;
      padding-right: 4px;
      text-transform: uppercase;
      text-decoration: none !important;
      border-bottom: 1px solid rgba(0, 0, 0, 0);
      &:hover {
        border-bottom: 1px solid $color-theme-default;
        text-decoration: none !important;
      }
    }
  }

  @media (hover: hover) {
    .product-collection__options {
      min-height: 1.5em;
      .blancsom-collection-list-options {
        display: none;
        margin-bottom: 0;
      }
    }
    .product-collection:hover {
      .blancsom-collection-list-options {
        display: flex;
      }
    }
  }

  // Collection-Head
  .collection-head {
    text-transform: uppercase;
    display: none;
  }

  // Thumbnail Image Navigation
  @media (min-width: $screen-lg-up) {
    .product-images-navigation span {
      background: none;
      .icon {
        fill: rgba($color-theme-default, 0.3);
      }
      &:hover {
        background: none;
        .icon {
          fill: rgba($color-theme-default, 1);
        }
      }
    }
  }

  // Header Style
  .header__line-info--style-1 {
    background-color: $color-background-lite;
    border-bottom: none;
    &,
    p {
      color: $color-theme3-default;
    }
  }
  .header__content {
    font-family: $font-sans-logo;
    .menu__item {
      font-family: $font-sans-logo;
    }
  }
  @media (min-width: $screen-lg-up) {
    .header__content {
      .header__line-top {
        min-height: 80px;
      }
      .header__line--colorize-2 {
        background-color: #fff;
        border-color: #fff;
      }
    }
  }
  .header__logo.d-lg-none {
    position: absolute;
    left: calc(50% - #{$mobile-logo-width-half});
    top: 18px;
  }
  .header__btn-account {
    i.btn-account svg {
      min-width: unset;
      min-height: unset;
      height: 18px;
      margin-top: 5px;
    }
  }

  // Designers List
  #designersList {
    @media (min-width: $screen-sm-up) {
      column-count: 2;
    }
    @media (min-width: $screen-md-up) {
      column-count: 3;
    }
    @media (min-width: $screen-lg-up) {
      column-count: 4;
    }
    @media (max-width: $screen-sm-down) {
      text-align: center;
    }
    column-gap: 1em;
    .designer-index-card {
      margin-bottom: 3rem;
      break-inside: avoid-column;
      h5.index-letter {
        font-family: $font-sans-logo;
        font-weight: bold;
        font-size: 2rem;
        margin: 0 0 0.2rem -2px;
      }
      .designer-name {
        a:hover {
          text-decoration: underline;
        }
      }
      &.selected {
        break-inside: unset;
      }
    }
  }
  #designersListNav {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 2rem;
    margin-left: -0.8rem;
    .designer-index-nav {
      color: $color-theme-default;
      font-family: $font-sans-logo;
      cursor: pointer;
      padding: 0.5rem 0.7rem;
      margin: 0.1rem;
      border: 1px solid rgba($color-theme-default, 0);
      &:hover {
        border-bottom: 1px solid $color-theme-default;
      }
      &.disabled {
        cursor: not-allowed;
      }
    }
    @media (max-width: $screen-sm-down) {
      margin-left: 0;
      .designer-index-nav {
        padding: 0.3rem 0.5rem;
      }
    }
  }
  .page-title {
    @media (max-width: $screen-sm-down) {
      text-align: center;
    }
  }

  // Footer
  .footer--style-blancsom1 {
    background-color: $color-background-lite;
    h5 {
      font-size: 0.8rem;
      letter-spacing: $spacing;
      color: $color-theme-default;
    }
    .footer__menus {
      margin-bottom: 15px;
    }
    .footer__subscription {
      p {
        font-family: $font-serif;
      }
      input[type="email"] {
        padding-left: 0.1rem;
        &,
        &:hover,
        &:focus {
          border-top: none;
          border-left: none;
          border-right: none;
          background: none;
        }
        &::placeholder {
          letter-spacing: $spacing;
        }
      }
      input[type="submit"] {
        width: 100%;
        background-color: $color-background-lite-darken;
        letter-spacing: $spacing;
        color: rgba($color-theme-default, 0.6);
        border: none;
        &:hover,
        &:focus {
          background-color: $color-theme-default;
          color: $color-background-lite;
        }
      }
    }
    .footer__section {
      .footer__section-content {
        li {
          a {
            color: $color-theme3-default;
          }
        }
      }
    }
  }
  // Notification Bg
  .notification-cookies__bg {
    background-color: $color-background-dark;
  }
  // Main Banner
  .main-banner-row {
    padding-left: 30px;
    padding-right: 30px;
    @media (max-width: $screen-sm-down) {
      padding-left: 15px;
      padding-right: 15px;
    }
    .promobox {
      margin-bottom: 30px;
      .promobox__text-row {
        .promobox__text-3 {
          padding-right: 8px;
          font-size: 0.9rem;
          display: inline-block;
          min-width: 64px;
        }
      }
      .promobox__text-1,
      .promobox__text-2,
      .promobox__text-3 {
        line-height: 1;
        color: $color-theme-default;
        font-size: 1.2rem;
      }
      .promobox__text-1 {
        text-transform: uppercase;
      }
      .promobox__text-2 {
        font-family: $font-serif;
      }
      .promobox__text-3 {
        font-family: $font-serif;
      }
    }
  }
  // Cart
  .free-shipping {
    color: $color-theme-default;
    background: none;
    .free-shipping__progress {
      background: none;
    }
  }
  // Collection Sidebar
  .collection-control__button-sidebar {
    i > svg {
      min-width: unset;
      min-height: unset;
      width: 16px;
      transform: translateY(1px);
    }
  }
  // Popup Notify Me
  .popup__body {
    .notify-me {
      h4 {
        font-weight: 800;
        font-size: 1.5rem;
      }
      h6 {
        text-transform: uppercase;
        font-size: 1.5rem;
      }
    }
  }
  // Shoes Size Chart
  h6.shoes-size-chart {
    text-align: center;
    margin-bottom: 0.5em;
  }
  table.shoes-size-chart {
    font-family: $font-sans;
    width: 100%;
    font-size: 0.75rem;
    tr {
      td,
      th {
        min-width: 5em;
        text-align: center;
        padding: 4px 8px;
        vertical-align: middle;
      }
      td {
        border-bottom: 1px solid #dee2e6;
      }
      th {
        background-color: #141414;
        color: #fff;
        border-bottom: 1px solid #141414;
      }
      &:hover {
        td {
          border-bottom: 1px solid #000;
          &:hover {
            font-weight: bold;
          }
        }
      }
    }
    
  }
  // Home Banner Styling
  .promobox.text-next-image {
    .d-block {
      width: 50%;
      float: left;
      margin-right: 16px;
    }
  }
}
.logged-in-customer-information__avatar-wrapper {
  display: none;
}
