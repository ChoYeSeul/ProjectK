// CSS Overrided by JSPH
$font-sans: soleil, sans-serif;
$font-sans-logo: bicyclette, sans-serif;
$font-serif: adobe-garamond-pro, serif;

$color-theme-default: #141414;
$color-theme3-default: #858585;

// $color-sale: #4527a0;
$color-sale: $color-theme-default;
$color-background-lite: #f6f8f6;
$spacing: 0.12em;

$screen-xs-down: 0;
$screen-sm-down: 540px;
$screen-md-down: 777px;
$screen-lg-down: 1024px;
$screen-xl-down: 1259px;

$screen-xs-up: 0;
$screen-sm-up: 541px;
$screen-md-up: 778px;
$screen-lg-up: 1025px;
$screen-xl-up: 1260px;

.blancsom-theme {
  @media (min-width: $screen-lg-up) {
    .container-fluid {
      padding-right: 30px;
      padding-left: 30px;
    }
    // Product Page Layout
    .col-12.col-lg-6 {
      &.blancsom-image-side {
        padding-right: 100px;
      }
      &.blancsom-info-side {
        padding-top: 64px;
        padding-right: 160px;
        .js-sticky-sidebar {
          .product-page__tabs {
            .tabs__body {
              margin-bottom: 96px;
            }
          }
        }
      }
    }
  }

  // Breadcrumbs
  .breadcrumbs {
    li {
      text-transform: uppercase;
      letter-spacing: $spacing;
    }
  }

  .label--sale {
    background-color: $color-sale;
  }
  // Product Page Styling
  .product-page-info {
    .product-page-info__title {
      h1 {
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: $spacing;
        line-height: 1.3;
      }
    }
    .product-page-info__price {
      .price {
        font-size: 1.1rem;
        letter-spacing: $spacing;
        display: inline-flex;
        flex-flow: row-reverse;
        &.price--sale {
          & > span:not(:first-child) {
            margin-right: 0.2em;
            &::before {
              display: inline-block;
              content: "";
            }
          }
          & > span:first-child {
            font-size: 0.75em;
            margin-top: -0.1em;
          }
        }
      }
    }
    .product-page-info__price-sale-details {
      color: $color-sale;
    }
    .product-page-info__details {
      .product-page-info__vendor {
        text-transform: uppercase;
        letter-spacing: $spacing;
      }
    }
    .btn-link {
      text-decoration: none;
    }
    .shipping-info {
      $info-color: $color-sale;
      border: 1px solid rgba($info-color, 0.3);
      padding: 0.5rem;
      h6 {
        display: flex;
        font-size: 0.75rem;
        color: $info-color;
        margin-bottom: 4px;
      }
      svg {
        min-height: unset;
        height: 1.2em;
        fill: $info-color;
      }
      p {
        padding-left: 0.3rem;
        padding-right: 0.3rem;
        font-size: 0.7rem;
        color: $info-color;
        font-weight: 300;
        line-height: 1.3;
        margin: 0;
      }
    }
  }
  .product-page__tabs {
    .tabs__content,
    p {
      font-family: $font-serif;
      font-weight: 400;
      font-style: normal;
      color: #000000;
      &.description img {
        display: none; // Hide images in descirption
      }
    }
  }
  // Collection List Styling
  .label {
    line-height: unset;
    font-family: $font-sans-logo;
    height: unset;
    padding: 2px 6px 1px;
    // font-weight: bold;
    &.label--out-stock {
      $color-out-stock: $color-sale;
      color: $color-out-stock;
      background: none;
      border: 1px solid rgba($color-out-stock, 0.5);
      padding-top: 1px;
    }
  }
  .product-collection__more-info {
    &,
    a {
      color: $color-theme-default !important;
    }
  }
  .product-collection__price {
    .price {
      font-size: 1rem;
      display: inline-flex;
      flex-flow: row-reverse;
      &.price--sale {
        & > span:not(:first-child) {
          margin-right: 0.2em;
          &::before {
            display: inline-block;
            content: "";
          }
        }
        & > span:first-child {
          font-size: 0.75em;
        }
      }
    }
  }
  .product-collection__title {
    h4 {
      line-height: 1.2;
    }
  }
  .collection-control__information {
    font-family: $font-serif;
    font-size: 1.1em;
  }
  .blancsom-collection-list-options {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
    .product-options__section {
      font-family: $font-serif;
      color: #000000;
      &:not(:last-child) {
        &::after {
          margin-left: 0.1em;
          margin-right: 0.3rem;
          content: ",";
        }
      }
      .blancsom-option:not(:last-child) {
        &::after {
          content: "/";
          margin-left: 0.2em;
          margin-right: 0.2em;
        }
      }
      .blancsom-option.disabled {
        display: none;
      }
    }
  }
  .pagination {
    .btn.no-product {
      background: none;
      border: none;
      span {
        font-family: $font-serif;
        color: $color-theme-default;
        // text-decoration: underline;
        // text-transform: lowercase;
        // &::first-letter {
        //   text-transform: uppercase;
        // }
      }
    }
  }
  @media (hover: hover) {
    .product-collection__options {
      min-height: 1.5em;
      .blancsom-collection-list-options {
        display: none;
        margin-bottom: 0;
      }
    }
    .product-collection:hover {
      .blancsom-collection-list-options {
        display: flex;
      }
    }
  }
  // Collection-Head
  .collection-head {
    text-transform: uppercase;
    display: none;
  }
  // Thumbnail Image Navigation
  .product-images-navigation span {
    background: none;
  }

  // Header Style
  .header__line-info--style-1 {
    background-color: $color-background-lite;
    border-bottom: none;
    &,
    p {
      color:$color-theme3-default;
    }
  }
  .header__content {
    font-family: $font-sans-logo;
    .menu__item {
      font-family: $font-sans-logo;
    }
  }
  @media (min-width: $screen-lg-up) {
    .header__content {
      .header__line-top {
        min-height: 80px;
      }
      .header__line--colorize-2 {
        background-color: #fff;
        border-color: #fff;
      }
    }
  }
  // Designers List
  #designersList {
    @media (min-width: $screen-sm-up) {
      column-count: 2;
    }
    @media (min-width: $screen-md-up) {
      column-count: 3;
    }
    @media (min-width: $screen-lg-up) {
      column-count: 4;
    }
    column-gap: 1em;
    .designer-index-card {
      margin-bottom: 3rem;
      break-inside: avoid-column;
      h5.index-letter {
        font-family: $font-sans-logo;
        font-weight: bold;
        font-size: 2rem;
        margin: 0 0 0.2rem -2px;
      }
      .designer-name {
        a:hover {
          text-decoration: underline;
        }
      }
      &.selected {
        break-inside: unset;
      }
    }
  }
  #designersListNav {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 2rem;
    margin-left: -0.8rem;
    .designer-index-nav {
      color: $color-theme-default;
      font-family: $font-sans-logo;
      cursor: pointer;
      padding: 0.5rem 0.7rem;
      margin: 0.1rem;
      border: 1px solid rgba($color-theme-default, 0);
      &:hover {
        border-bottom: 1px solid $color-theme-default;
      }
      &.disabled {
        cursor: not-allowed;
      }
    }
  }
}
// Footer 
.footer--style-blancsom {
  background-color: $color-background-lite;
  h5 {
    font-size: 0.8rem;
    letter-spacing: $spacing;
    color: $color-theme-default;
    .footer__subscription {
      p {
        font-family: $font-serif;
      }
      input[type="email"] {
        padding-left: 0.1rem;
        &,
        &:hover,
        &:focus {
          border-top: none;
          border-left: none;
          border-right: none;
          background: none;
        }
        &::placeholder {
          letter-spacing: $spacing;
        }
      }
      input[type="submit"] {
        width: 100%;
        background-color: #dbe0dd;
        letter-spacing: $spacing;
        color: rgba($color-theme-default,0.6);
        border: none;
        &:hover,
        &:focus {
          background-color: $color-theme-default;
          color: $color-background-lite;
        }
      }
    }
    .footer__section {
      .footer__section-content {
        li {
          a {
            color: $color-theme3-default;
          }
        }
      }
    }
  }
}